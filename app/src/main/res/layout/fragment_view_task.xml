<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTaskTitle"
                style="@style/TextStyleBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="@dimen/spacing_small"
                android:textSize="@dimen/h6_headline_medium"
                tools:text="Kantipur temple House" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/colorView" />

            <TextView
                style="@style/TextViewTaskTitle"
                android:paddingTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_tiny_small"
                android:text="@string/text_description" />

            <TextView
                android:id="@+id/tvTaskDescription"
                style="@style/TextViewTaskDescription"
                android:paddingBottom="@dimen/spacing_tiny_small"
                android:textColor="@color/colorLightBlack"
                tools:text="9V ko Battery Alkaline Maxcell 50 pcs lagne smoke sensor ko lagi. Thamel Ma" />

            <include
                android:id="@+id/includeDate"
                layout="@layout/snippet_view_task_date_field" />

            <TextView
                style="@style/TextViewTaskTitle"
                android:paddingTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_tiny_small"
                android:text="@string/text_task_status" />

            <TextView
                android:id="@+id/tvTaskStatus"
                style="@style/TextViewTaskDetail"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_tiny_small"
                android:background="@color/colorBlue"
                android:paddingLeft="@dimen/spacing_small"
                android:paddingRight="@dimen/spacing_small"
                android:textColor="@color/colorWhite"
                tools:text="New" />

            <TextView
                style="@style/TextViewTaskTitle"
                android:paddingTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_tiny_small"
                android:text="@string/text_task_priority" />

            <TextView
                android:id="@+id/tvTaskPriority"
                style="@style/TextViewTaskDetail"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:paddingLeft="@dimen/spacing_small"
                android:paddingRight="@dimen/spacing_small"
                android:textColor="@color/colorWhite"
                tools:text="Urgent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/colorView" />

            <include
                android:id="@+id/includeClient"
                layout="@layout/snippet_view_task_client_info" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/colorView" />

            <include layout="@layout/snippet_view_task_change_status" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height"
                android:background="@color/colorView" />

        </LinearLayout>


    </ScrollView>
</layout>
