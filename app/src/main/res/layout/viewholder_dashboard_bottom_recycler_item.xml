<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dashboardBottom"
            type="com.techsales.taskmanager.data.model.viewmodel.dashboard.DashboardBottomRecyclerViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center">

            <TextView
                android:id="@+id/task_date"
                android:layout_width="@dimen/button_height_tall"
                android:layout_height="@dimen/button_height_tall"
                android:background="@drawable/bg_circle_view"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="@{dashboardBottom.day}"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                tools:text="SUN" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_tiny"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/task_title"
                style="@style/TextStyleBlack"
                android:text="@{dashboardBottom.name}"
                android:textSize="@dimen/h6_headline_medium"
                tools:text="Kantipur temple house" />

            <TextView
                android:id="@+id/task_assigned_by"
                style="@style/TextStyleBlack"
                android:text="@{dashboardBottom.createdBy}"
                android:textSize="@dimen/caption_medium" />

            <TextView
                android:id="@+id/task_status"
                style="@style/TextStyleBlack"
                android:text="@{dashboardBottom.status}"
                android:textColor="@{dashboardBottom.textColor}"
                android:textSize="@dimen/over_line_semi_bold_caps"
                android:textStyle="bold"
                tools:text="New" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|right">

            <TextView
                android:id="@+id/btn_view_task"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_short"
                android:background="@drawable/bg_button_view"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large"
                android:text="View"
                android:textColor="@color/colorGreen" />
        </LinearLayout>

    </LinearLayout>

</layout>