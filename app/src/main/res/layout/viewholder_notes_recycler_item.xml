<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="notes"
            type="com.techsales.taskmanager.data.model.viewmodel.notes.NotesViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bod_edittext"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans"
            android:singleLine="true"
            android:text="@{notes.notesTitle}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/h6_headline_medium"
            tools:text="Title here" />


        <TextView
            android:id="@+id/item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:maxLines="2"
            android:text="@{notes.notesDesc}"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/caption_medium"
            tools:text="description here" />

    </LinearLayout>

</layout>